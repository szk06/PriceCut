<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    tools:context="com.example.user.pricecut.SignUp">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="false"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <!-- Here you put the rest of your current view-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:layout_marginTop="100dp"
            android:src= "@drawable/logo"
            android:layout_gravity="center"
            />


        <GridLayout
            android:layout_gravity="center"

            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <EditText
                android:layout_width="354dp"
                android:layout_height="70dp"
                android:layout_marginTop="30dp"
                android:id="@+id/full_name"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnSpan="3"
                android:hint="Enter your full name..."
                android:textSize="20sp"
                android:padding="7dp"
                android:background="@drawable/rounded_edittext"
                android:textColor="#FFFFFF"/>
            <EditText
                android:layout_width="354dp"
                android:layout_height="70dp"
                android:textSize="20sp"
                android:padding="7dp"
                android:id="@+id/user_name"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginTop="30dp"
                android:layout_columnSpan="3"
                android:hint="Enter your user name..."
                android:background="@drawable/rounded_edittext"
                android:textColor="#FFFFFF"
                />
            <EditText
                android:layout_width="354dp"
                android:textSize="20sp"
                android:padding="7dp"
                android:textColor="#FFFFFF"
                android:layout_height="70dp"


                android:layout_row="2"
                android:layout_column="0"
                android:layout_columnSpan="3"
                android:layout_marginTop="30dp"
                android:background="@drawable/rounded_edittext"

                android:hint="Enter your password..."
                android:inputType="textPassword"
                android:id="@+id/password"

                />

            <EditText

                android:layout_width="354dp"
                android:textSize="20sp"
                android:padding="7dp"
                android:textColor="#FFFFFF"
                android:layout_height="70dp"
                android:id="@+id/mobilenumber"
                android:inputType="number"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_marginTop="30dp"
                android:layout_columnSpan="3"

                android:background="@drawable/rounded_edittext"
                android:hint="Enter your mobile number..." />
            <EditText
                android:layout_width="354dp"
                android:layout_height="70dp"
                android:id="@+id/email"
                android:inputType="textEmailAddress"
                android:textColor="#FFFFFF"

                android:layout_row="4"
                android:layout_column="0"
                android:textSize="20sp"
                android:padding="7dp"

                android:layout_columnSpan="3"
                android:background="@drawable/rounded_edittext"
                android:layout_marginTop="30dp"
                android:hint="Enter your Email Address..." />


            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I am a seller"
                android:id="@+id/seller_check"
                android:textColor="#00FFFF"
                android:layout_row="5"
                android:layout_column="0"
                android:textSize="20sp"
                android:layout_marginTop="30dp"
                android:buttonTint="#00FFFF"
                android:layout_columnSpan="3" />

            <EditText
                android:layout_width="354dp"
                android:layout_height="wrap_content"
                android:id="@+id/description"
                android:inputType="textMultiLine"
                android:lines="8"
                android:maxLines="10"
                android:minLines="6"
                android:layout_row="6"
                android:background="@drawable/rounded_edittext"
                android:layout_column="0"
                android:layout_marginTop="50dp"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:padding="7dp"
                android:visibility="invisible"
                android:layout_columnSpan="2"
                android:hint="Enter Description About your Sales..."
                android:scrollbars="vertical"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Give Location of Store"
                android:layout_marginTop="50dp"
                android:layout_row="7"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:id="@+id/locater"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"
                android:visibility="invisible"
                android:onClick=""
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Join PriceCut World"
                android:layout_marginTop="50dp"
                android:layout_row="8"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:id="@+id/button3"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"
                android:onClick="Join"
                />

        </GridLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>
