<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="horizontal">

    <ImageView
        android:layout_width="200dp"
        android:id="@+id/discount_image"
        android:layout_height="200dp"
        />

    <LinearLayout android:orientation="vertical"
        android:layout_marginLeft="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/discount_title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dip"
            android:textSize="25dip"
            android:textColor="#00FFFF"
            android:textStyle="bold|italic" >
        </TextView>

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/discount_category"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dip"
            android:textSize="16dip"
            android:textColor="#00FFFF"
            android:textStyle="bold" >
        </TextView>
        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dip"
            android:textSize="16dip"
            android:textColor="#00FFFF"
            android:textStyle="bold" >
        </TextView>
        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/rating"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dip"
            android:textSize="16dip"

            android:textColor="#00FFFF"

            android:textStyle="bold" >
        </TextView>

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/distance_to"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dip"
            android:textSize="16dip"

            android:textColor="#00FFFF"

            android:textStyle="bold" >
        </TextView>



        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/percentage"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textColor="#FF0000"
            android:padding="10dip"
            android:textSize="16dip"
            android:textStyle="bold"
            android:layout_marginBottom="22dp">
        </TextView>
    </LinearLayout>
</LinearLayout>
